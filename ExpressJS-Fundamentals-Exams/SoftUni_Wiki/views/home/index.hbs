<section id="featured">
    <h2>Latest article</h2>
    <article>
        <h3>{{title}}</h3>
        <p>{{content}}</p>
        {{#if _id}}
            <div class="controls">
                <a href="/article/details/{{_id}}">Read more</a>
            </div>
        {{/if}}
    </article>
</section>
<section id="recent">
    <h2>Recently added articles</h2>
    <ul>
        {{#each articles}}
            <li>
                <a href="/article/details/{{_id}}">{{title}}</a>
            </li>
        {{else}}
            <p>Article missing.</p>
        {{/each}}
    </ul>
</section>