<section>
    <h2>All articles</h2>
    <div class="spacer">
        <ul>
            {{#each articles}}
                <li>
                    <a href="/article/details/{{_id}}">{{title}}</a>
                </li>
            {{else}}
                <p>Missing articles!</p>
            {{/each}}
        </ul>
    </div>
</section>