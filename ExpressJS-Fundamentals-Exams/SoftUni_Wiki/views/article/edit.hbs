<section>
    <h2>Edit article
        {{#if isAdmin}}
            <div class="controls">
                {{#if isLock}}
                <a href="/article/unlock/{{_id}}">Unlock article</a>
                {{else}}
                <a href="/article/lock/{{_id}}">Lock article</a>
                {{/if}}
            </div>
        {{/if}}
    </h2>
    <div class="spacer">
        <form action="/article/edit/{{_id}}" method="POST">
            <label>Article title</label>
            <h3>{{title}}</h3>
            <label>Content</label>
            <textarea name="content">{{content}}</textarea>
            <input type="submit" value="Submit">
        </form>
    </div>
</section>