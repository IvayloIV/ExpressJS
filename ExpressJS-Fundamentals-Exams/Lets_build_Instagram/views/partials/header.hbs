<header>
    <span class="logo">Instagram</span>

    {{#if currentUser}}
        <span class="greeting">Welcome, {{currentUser.username}}! | <a href="/user/logout">[logout]</a></span>
    {{/if}}

    <ul class="menu">
        <li><a class="button" href="/">Home</a></li>
        {{#if currentUser}}
            <li><a class="button" href="/image/create">Create Image</a></li>
            <li><a class="button" href="/user/profile/{{currentUser.username}}">My Image</a></li>
        {{/if}}
        {{#if isAdmin}}
            <li><a class="button" href="/user/admins">Admins</a></li>
            <li><a class="button" href="/user/users">Normal Users</a></li>
        {{/if}}
        {{#unless currentUser}}
            <li><a class="button" href="/user/login">Login</a></li>
            <li><a class="button" href="/user/register">Register</a></li>
        {{/unless }}
    </ul>
</header>