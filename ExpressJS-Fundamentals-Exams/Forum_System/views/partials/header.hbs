<header>
    <span class="logo">Forum System</span>

    {{#if currentUser}}
        <span class="greeting">Welcome, {{currentUser.username}}! | <a href="/user/logout">[logout]</a></span>
    {{/if}}

    <ul class="menu">
        <li><a class="button" href="/">Home</a></li>
        <li><a class="button" href="/thread/list">List</a></li>
        {{#if currentUser}}
            <li><a class="button" href="/thread/create">Create Thread</a></li>      
            <li><a class="button" href="/myPosts">My posts</a></li>      
        {{/if}}
        {{#if isAdmin}}
            <li><a class="button" href="/category/create">Create Category</a></li>
            <li><a class="button" href="/category/all">All Categories</a></li>
            <li><a class="button" href="/user/admins">Admins</a></li>
            <li><a class="button" href="/user/normals">Normal Users</a></li>
        {{/if}}
        {{#unless currentUser}}
            <li><a class="button" href="/user/login">Login</a></li>
            <li><a class="button" href="/user/register">Register</a></li>
        {{/unless }}
    </ul>
</header>