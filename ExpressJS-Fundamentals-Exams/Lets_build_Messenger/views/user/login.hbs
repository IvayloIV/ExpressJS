<form action="/user/login" method="POST">
  <h2>Login</h2>
  <label>
    <span>Username</span>
    <input type="text" name="username" value="{{user.username}}"/>
  </label>
  <label>
    <span>Password</span>
    <input type="password" name="password" value="{{user.password}}"/>
  </label>
  <input type="submit" value="Login" />
</form>