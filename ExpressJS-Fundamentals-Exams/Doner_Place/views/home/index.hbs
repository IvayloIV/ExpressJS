<h1>Welcome to Doner Place!</h1>
<p>We offer a wide variety of tasty doner kebab, cutosmized to your liking. Choose from different sizes of chicken, beef and lamb and any topping you want. Place your order now!</p>
<div class="products">
    {{#if isAdmin}}
        <h2>Admin</h2>
        <div class="product-card">
            <img src="/static/img/new.png">
            <a href="/product/create" class="button product-title">Create Product</a>
        </div>
    {{/if}}

    <h2>Chicken Doner</h2>
    {{#each chickenDoner}}
        <div class="product-card">
            <img src="{{imageUrl}}">
            {{#if isAdmin}}
                <a href="/product/edit/{{_id}}" class="control"><img class="control-img" src="/static/img/edit.png"></a>
                <a href="/product/remove/{{_id}}" class="control"><img class="control-img" src="/static/img/delete.png"></a>
            {{else}}
                <a href="/order/checkout/{{_id}}" class="button product-title">Order</a>
            {{/if}}
        </div>
    {{else}}
        <div>Empty section.</div>
    {{/each}}
    <h2>Beef Doner</h2>
    {{#each beefDoner}}
        <div class="product-card">
            <img src="{{imageUrl}}">
            {{#if isAdmin}}
                <a href="/product/edit/{{_id}}" class="control"><img class="control-img" src="/static/img/edit.png"></a>
                <a href="/product/remove/{{_id}}" class="control"><img class="control-img" src="/static/img/delete.png"></a>
            {{else}}
                <a href="/order/checkout/{{_id}}" class="button product-title">Order</a>
            {{/if}}
        </div>
    {{else}}
        <div>Empty section.</div>
    {{/each}}
    <h2>Lamb Doner</h2>
    {{#each lambDoner}}
        <div class="product-card">
            <img src="{{imageUrl}}">
            {{#if isAdmin}}
                <a href="/product/edit/{{_id}}" class="control"><img class="control-img" src="/static/img/edit.png"></a>
                <a href="/product/remove/{{_id}}" class="control"><img class="control-img" src="/static/img/delete.png"></a>
            {{else}}
                <a href="/order/checkout/{{_id}}" class="button product-title">Order</a>
            {{/if}}
        </div>
    {{else}}
        <div>Empty section.</div>
    {{/each}}
</div>