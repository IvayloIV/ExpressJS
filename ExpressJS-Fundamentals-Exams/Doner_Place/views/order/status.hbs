<h1>Your orders</h1>
<div class="orders">
    {{#each orders}}
        <div class="order">
            <span class="order-time">{{currentDate}}</span>
            <span class="order-name">{{this.product.category}} doner, {{this.product.size}} cm</span>
            <span class="order-status">{{status}}</span>
            <a href="/order/details/{{_id}}" class="button order-button">Details</a>
        </div>
    {{else}}
        <div>No orders</div>
    {{/each}}
</div>