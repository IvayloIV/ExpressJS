<div class="container body-content">
    <div class="row">
        {{#each articles}}
            <div class="col-md-6">
                <article>
                    <header>
                        <h2>{{this.title}}</h2>
                    </header>

                    <p>{{this.content}}
                    </p>

                    <small class="author">
                        {{this.author.fullName}}
                    </small>
                    <footer>
                        {{#if isOwner}}
                            <a class="btn btn-success btn-xs" href="/article/edit/{{this._id}}">Edit &raquo;</a>
                            <a class="btn btn-danger btn-xs" href="/article/delete/{{this._id}}">Delete &raquo;</a>
                        {{/if}}
                        <div class="pull-right">
                            <a class="btn btn-default btn-xs" href="/article/details/{{this.id}}">Read more &raquo;</a>
                        </div>
                    </footer>
                </article>
            </div>
        {{else}}
            <h3>Articles missing.</h3>
        {{/each}}
    </div>
</div>
