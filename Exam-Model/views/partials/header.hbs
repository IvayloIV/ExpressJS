<header>
    <span class="logo">Doner  Place</span>

    {{#if currentUser}}
        <span class="greeting">Welcome, {{currentUser.fullName}}! | <a href="/user/logout">[logout]</a></span>
    {{/if}}

    <ul class="menu">
        <li><a class="button" href="/">Home</a></li>
        {{#if currentUser}}
            {{#if isAdmin}}
                <li><a class="button" href="/order/status/admin">All Orders</a></li>
            {{else}}
                <li><a class="button" href="/order/status">Order Status</a></li>
            {{/if}}
        {{/if}}
        {{#unless currentUser}}
            <li><a class="button" href="/user/login">Login</a></li>
            <li><a class="button" href="/user/register">Register</a></li>
        {{/unless }}
    </ul>
</header>