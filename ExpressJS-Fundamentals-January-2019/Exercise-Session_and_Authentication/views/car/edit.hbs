<form action="/car/edit/{{_id}}" method="POST" enctype="multipart/form-data" class="car-form">
    <label for="carModel">Model:</label>
    <input class="input-field" type="text" id="carModel" name="model" value="{{model}}" />
    <label for="image">Image:</label>
    <input class="input-field" type="file" name="image" id="image" />
    <label for="pricePerDay">Price per Day:</label>
    <input class="input-field" type="number" name="pricePerDay" id="pricePerDay" value="{{pricePerDay}}" />
    <input class="submit-btn" type="submit" value="Edit Car" />
</form>